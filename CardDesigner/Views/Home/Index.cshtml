
<link href="~/css/IDCardDesigner.css" rel="stylesheet" />

<div class="row notprintable">
    <div class="col">
        <div class="form-group">
            <label class="col-form-label">Width</label>
            <input class="form-control" type="number" id="Width" placeholder="Width" value="5.4" />
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label class="col-form-label">Heigth</label>
            <input class="form-control" type="number" id="Heigth" placeholder="Heigth" value="8.6" />
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label class="col-form-label">Font Size</label>
            <input class="form-control" type="number" id="FontSize" placeholder="Font Size" value="10" />
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label class="col-form-label">Font Color</label>
            <input class="form-control" type="color" id="FontColor" placeholder="Font Color" value="#000000" />
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label class="col-form-label">Background Color</label>
            <input class="form-control" type="color" id="BgColor" placeholder="Background Color" value="#ffffff" />
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label class="col-form-label">Background Image</label>
            <input class="form-control" type="file" id="BgImage" placeholder="Background Image" />
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-4 notprintable">
        <ul id="sortable1" class="connectedSortable">
            <li class="ui-state-default">
                <div class="resizable">
                    <img style="width:100%;height: 90%;" src="~/images/logo.jpg" alt="barcode">
                </div>
            </li>
            <li class="ui-state-default">
                <div class="resizable">
                    <img style="width:100%;    height: 90%;" src="~/images/personalPic.jpg" alt="barcode">
                </div>
            </li>
            <li class="ui-state-default">
                <div class="resizable">
                    <h4>Name</h4>
                </div>
            </li>
            <li class="ui-state-default">
                <div class="resizable">
                    <h4>Job</h4>
                </div>
            </li>
            <li class="ui-state-default">
                <div class="resizable">
                    <img style="width:100%;    height: 90%;" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAUAAAAAmAQMAAACPhNAaAAAABlBMVEX///8AAABVwtN+AAAAAXRSTlMAQObYZgAAAAlwSFlzAAAOxAAADsQBlSsOGwAAACxJREFUOI1j+MDw4T8QgtCHDwz/4TRQnOEDBIEFGUYVjiocVTiqcFTh8FcIAHdkqa1be4MjAAAAAElFTkSuQmCC" alt="barcode">
                </div>
            </li>
        </ul>
    </div>
    <div class="col-md-4 card-desinger notprintable">
        <ul id="sortable2" class="connectedSortable">  </ul>
    </div>
    <div class="col-md-4">
        <div class="liveview"></div>
        <button type="button" class="btn btn-outline-primary notprintable" onclick="printDiv()">Print</button>
    </div>
</div>

<script src="~/js/IDCardDesigner.js"></script>